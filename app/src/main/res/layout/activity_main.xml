<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Практична робота №6\nМетод упорядкованих діаграм (УД)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Режим: —"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Коефіцієнти (за методичкою)"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <EditText
            android:id="@+id/edKrShr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kр для ШР (контрольний: 1.25)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edKqShr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kq для ШР (контрольний: 1.0)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edKrShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kр для цеху (контрольний: 0.7)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edKqShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kq для цеху (контрольний: 0.7)"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnFillControl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Заповнити\n(контрольний)" />

            <Button
                android:id="@+id/btnFillVariant2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Заповнити\n(варіант 2)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnCalc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Розрахувати" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Очистити" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Результат..."
            android:paddingTop="12dp" />

    </LinearLayout>
</ScrollView>
